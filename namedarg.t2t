% grammar remmutate

main = pattern+

pattern =
  | call -- call
  | any -- default

call = ident spaces "(" stuff* ")"

stuff =
  | "⇐" -- mutate
  | ~")" any -- default
  
ident = firstc restc*
firstc = letter | "_"
restc = alnum | "_"


% rewrite
main [p+] = ‛«p»’

pattern_call [x] = ‛«x»’
pattern_default [x] = ‛«x»’

call [id _ws2 lp stuff* rp] = ‛«id»«_ws2»«lp»«stuff»«rp»’

stuff_mutate [x] = ‛ ∷ ’
stuff_default [x] = ‛«x»’

ident [f r*] = ‛«f»«r»’
firstc [c] = ‛«c»’
restc [c] = ‛«c»’
peephole {
  main = stuff+
  stuff =
    | funcallIdent -- funcallident
    | any -- default

  funcallIdent = "(" space* "funcall" space space* "'" ident space* args* ")"
  args =
    | "(" stuff* ")" -- rec
    | ~"(" ~")" any -- default

  ident = "❲"? first rest* "❳"?
  first = letter | "_"
  rest = letter | digit | "_"
}

fmtpeephole {

main = pattern+

pattern =
  | applySyntactic<Str> -- str
  | any -- default

Str =
  | "scons" "(" Str "," Str ")" -- rec
  | Interpolation -- interpolate
  | char -- char
  
Interpolation =
  | "interpolate" "(" ident ")" -- single

char = sq (("\\'" | ~sq any))* sq

sq = "'"

string = dq schar* dq
dq = "\""
schar = ~dq any

ident = first rest*
first = letter | "_"
rest = alnum | "_"

}

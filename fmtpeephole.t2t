fmtpeephole {

main = pattern+

pattern =
  | applySyntactic<Strtop> -- str
  | any -- default

Strtop =
  | CharRun Strtop? -- charrun
  | interpolation Strtop? -- interpolation
  
CharRun =
  | char CharRun -- run
  | char -- single

char = q (~reserved any)*

interpolation = "«" ident "»"

q = "◦"
reserved = q | "«" | "»"

ident = first rest*
first = letter | "_"
rest = alnum | "_"

}
